.v-auth-new {
  background $gray-darker url(./auth_bg.jpg)
  background-size cover
  min-height 100vh
  display flex
  justify-content center
  flex-direction column

  &__container {
    width 400px
    margin 0 0 4rem 6rem
  }

  &__body {
    background rgba($gray-base, .4)
    border-radius 2px
    padding 2rem 5%
    color $gray-light
    display flex
  }

  &__logotype {
    $w = 3px
    $c = $gray

    font-size 4rem
    color $white
    padding 4rem 0 0 5%
    font-family $font-family-head
    font-weight bold
    text-shadow $w $w 0 $c, (-($w)) (-($w)) 0 $c, $w (-($w)) 0 $c, (-($w)) $w 0 $c
    letter-spacing .06em
    line-height 1.2
  }

  &__tagline {
    text-transform uppercase
    padding 0 0 2rem 5%
    color $gray-light
    letter-spacing .03em
  }

  &__form {
    width 230px
  }

  &__description {
    border-left 1px solid $gray-lighter
    padding-left 3rem
    margin-left 3rem
    width 700px
  }

  &__description,
  &__activate {
    font-size 1.3rem
    color $gray-lighter
    min-height 90px
    display flex
    align-items center
  }
}
